<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        
        <li>
            <span>User listing</span>
        </li>
    </ul>
    
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title"> Danh sach 
    <small>thong tin thành viên</small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="note note-info">
    <p> Danh sach thành viên</p>
</div>


<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-user"></i>
            <span class="caption-subject  bold uppercase">Thành viên</span>
        </div>
        <div class="pull-right" style="margin: 3px;">
            <%= link_to "Thêm mới", {:action => 'new'}, :class => 'btn red'%>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-scrollable">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>                        
                        <th> # </th>
                        <th> Username </th>
                        <th> Full name </th>                        
                      <!--   <th> Status </th> -->
                        <th> Birthday</th>
                        <th> Last login </th>       
                        <th> Action </th>             
                    </tr>
                </thead>
                <tbody>
                    <% if !@users.blank? %>
    	                <% @users.each_with_index do |c, index| %>				   	
    				   	<tr>
                            <td> <%= index+1 %> </td>
                            <td> <%= link_to c.user_name, {:action => 'show', :id => c.id} -%> </td>
                            <td> <%= c.name -%> </td>
                            <!-- <td>
                                <span class="label label-sm label-success"> <%= c.status == 1 ? "Active" : "InActive" %></span>
                            </td> -->
                            <td> <%= c.birthday %>  </td>
                            <td>
                            <%= c.last_login -%> 
                            </td>
                            <td class="util-btn-margin-bottom-5">
                               <%= link_to "Edit", {:action => 'edit', :id => c.id}, :class => 'btn btn-sm yellow btn-outline edit'%>     
                               <%= button_to "Delete", {:action => 'destroy', :id => c.id} , {:class => 'btn btn-sm red btn-outline deleted', :method => :delete,:confirm => 'Are you sure?', :disable_with => 'loading...'}%>

                            </td>
                        </tr>
    				    <% end %>
                        <tr>
                        <td colspan="99">
                        <%= will_paginate @users %>
                        <td>
                        </tr>
                    <% else %>
                        <tr> 
                            <td colspan="99">
                                Khong co du lieu
                            </td>
                        </tr>
                    <% end %>
	                    
                    
                </tbody>
            </table>
        </div>
    </div>
</div>



